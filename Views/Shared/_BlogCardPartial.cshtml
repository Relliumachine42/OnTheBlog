@model BlogPost
@inject IImageService _ImageService

<div class="content-block post-list-view mt--30">
    <div class="post-thumbnail">
        <a asp-action="Details" asp-controller="BlogPosts" asp-route-slug="@Model?.Slug">
            <img src="@_ImageService.ConvertByteArrayToFile(Model?.ImageData,Model?.ImageType,DefaultImage.BlogPostImage)" alt="Post Images">
        </a>
    </div>
    <div class="post-content">
        <div class="post-cat">
            <div class="post-cat-list">
                <a class="hover-flip-item-wrapper" asp-action="CategoryFilter" asp-controller="BlogPosts" asp-route-category="@Model?.Category?.Name">
                    <span class="hover-flip-item">
                        <span data-text="@Model?.Category?.Name">@Model?.Category?.Name</span>
                    </span>
                </a>
            </div>
        </div>
        <h4 class="title">
            <a asp-action="Details" asp-controller="BlogPosts" asp-route-slug="@Model?.Slug">
                @Model?.Title
            </a>
        </h4>
        <div class="post-meta-wrapper">
            <div class="post-meta">
                <div class="content">
                    <h6 class="text-truncate d-inline-block" style="max-width: 350px;">
                        @Model?.Abstract       
                    </h6>
                    <ul class="post-meta-list">
                        <li>@Model?.Created.ToString("MMM dd, yyyy")</li>
                        <li>@Model?.Comments.Count Comments</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
