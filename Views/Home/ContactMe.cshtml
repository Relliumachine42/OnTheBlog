@model BlogUser

<!-- Start Banner Area  -->
<div class="axil-banner banner-style-1 bg_image bg_contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner">
                    <h1 class="title">Contact Me</h1>
                    <p class="description">Contact me for your technical support needs or general queries.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Banner Area  -->
<!-- Start Post List Wrapper  -->
<div class="axil-post-list-area axil-section-gap bg-color-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-8">
                <!-- Start About Area  -->
                <div class="axil-about-us">
                    <div class="inner">
                        <h2>Hello there! </h2>
                        <p>This blog platform was created by me, the author of the blog posts. I hope you've enjoyed using this web application, and you can use the form below to send me an email if you have any questions regarding the content or structure of this blog. </p>
                        <p><strong>Check out my coding portfolio</strong> In the footer I have links to my github repository, my LinkedIn account, and my portfolio website. Feel free to explore and ask questions about anything you find there. </p>
                        <p class="">Email: glennschwartz42@gmail.com</p>
                    </div>
                    <!-- Start Contact Form  -->
                    <div class="axil-section-gapTop axil-contact-form-area">
                        <h4 class="title mb--10">Send Us a Message</h4>
                        <p class="b3 mb--30">Your email address will not be published. All the fields are required.</p>
                        <form method="post" asp-action="ContactMe" class="contact-form--1 row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label for="contact-name">First Name</label>
                                    <input asp-for="FirstName">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label for="contact-phone">Last Name</label>
                                    <input asp-for="LastName">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input asp-for="Email">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="contact-message">Message</label>
                                    <input name="message" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-submit">
                                    <button type="submit" class="axil-button button-rounded btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- End Contact Form  -->
                </div>
                <!-- End About Area  -->
            </div>
        </div>
    </div>
</div>
<!-- End Post List Wrapper  -->
@section scripts{

    <!--Sweet Alerts-->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        let message = '@(ViewBag.SwalMessage)';
        if (!message.includes("Error") && message != '') {
            Swal.fire({
                backdrop: false,
                icon: 'success',
                title: message,
                showConfirmButton: true
            });
        } else if (message.includes("Error")) {
            Swal.fire({
                backdrop: false,
                icon: 'error',
                title: 'Oops...',
                text: message
            });
        }
    </script>
    <!--End Sweet Alerts-->
    <!--CK Editor-->
    <script src="https://cdn.ckeditor.com/ckeditor5/37.1.0/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('.editor'), {
                licenseKey: '',
            })
            .then(editor => {
                window.editor = editor;
            });
    </script>
    <!--End CK Editor-->
 }